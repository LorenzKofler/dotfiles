configuration {
    modi: "window,drun,ssh,combi";
    display-drun:                   "Apps";
    display-window:                 "Window";
    show-icons:true;
    theme: "Monokai.rasi";
}
 
* {
    lines: 15;
    columns: 1;
    background-color: #1d1f21;
    border-color: #00000000;
    text-color: #EFEFEF;
    font: "Roboto 28";
}
 
#window {
    border: 0;
    border-radius: 4px;
    padding: 40;
    width: 45%;
    height: 50%;
}
 
#mainbox {
    background-color: #1d1f21;
    children: [inputbar, listview];
    spacing: 10px;
    /*margin: 20%;*/
    padding: 5px 0;
    border: 1px;
    border-color: @base0D;
}
 
 
#listview {
    background-color: #1d1f21;
    fixed-height: 0;
    border: 0px;
    spacing: 5px;
    scrollbar: false;
    padding: 0px 0px 0px;
}
 
#element {
    background-color: #1d1d21;
    border: 0;
    border-radius: 15px;
    padding: 3 0  3 4 ;
}
 
#element selected {
    background-color: #00a0e6;
    text-color: #EFEFEF;
}
 
 
#inputbar {
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
    background-color: #00000000;
}
 
#case-indicator {
    background-color: #00000000;
    spacing:    0;
}
#entry {
    background-color: #00000000;
    spacing:    0;
}
#prompt {
    background-color: #00000000;
    spacing:    0;
}
 
#textbox-prompt-colon {
    background-color: #00000000;
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
}

